<section class="posts">

  
  <% if notice %>
    <p id="notice" class="bg-info text-white p-2"><%= notice %></p>
  <% end %>

  <h1 class="text-center my-4">Posts</h1>

  <table class="mx-auto table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <% if user_signed_in? %>
          <th>User</th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.body %></td>
          <% if user_signed_in? %>
            <td><%= post.user.name %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <% if user_signed_in? %>
    <p class="text-center"><%= link_to 'New Post', new_post_path, class: 'btn btn-primary w-25' %></p> 
  <% end %>

</section>